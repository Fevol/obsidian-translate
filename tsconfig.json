{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"lib": [
			"DOM",
			"ES2020",
			"ESNext"
		],
		"types": [
			"svelte",
			"node"
		]
	},
	"include": [
		"**/*.ts"
	]
}
